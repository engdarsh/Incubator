<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".SelectedIncubator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inc Num: "
            android:textColor="#fff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/IncNum_SeleInc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Child Name : "
            android:textColor="#fff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/ChildNum_SeleInc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="ID Num : "
            android:textColor="#fff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/IdNum_SeleInc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#fff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Body Temb = "
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/BodyTem_SeleInc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:paddingLeft="20dp"
            android:text="Hert ="
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/HeartRate_SelInc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:textColor="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Humidity = "
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Humidity_SeleInc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="Temp = "
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Temp_SeleInc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>

<Button
    android:id="@+id/ViewDetail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="show details"
    android:layout_gravity="bottom" />

</LinearLayout>
